@model Category
@{
    ViewData["Title"] = "Edit";
}

<h1 class="text-center">Edit data</h1>

<form method="post"  asp-controller="Category" asp-action="Edit">
    <input type="hidden" asp-for="Id" />
    <div class="form-group ">
    <label >ENTER NAME</label>
    <input name="namess" asp-for="Name"  type="text" class="form-control" placeholder="Input name">
  </div>
 
  <div class="form-group ">
    <label >Enter DisplayOrder</label>
    <input name="displayss" asp-for="DisplayOrder"  type="text" class="form-control" placeholder="Display">
  </div>

  <button type="submit" class="btn btn-success">Editthis</button>

  <button  asp-controller="Category" asp-action="Index" class="btn btn-success">Back</button>
</form>
<a asp-controller="Category" asp-action="Delete"  style=" text-decoration:none; color:orangered; margin:7px; ">Delete</a>

